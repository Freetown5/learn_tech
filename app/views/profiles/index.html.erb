<h2>Stories from people just like you! Placeholder text!</h2>

<% @profiles.each do |profile| %>
	<div class="profile">
		<%= link_to image_tag(profile.img_url, alt: "Profile Image"), profile_path(profile), class: "img" %>
		<%= link_to profile.name, profile_path(profile), class: "name" %>
		<p class="former_position"><%= profile.former_position %></p>
		<p class="current_position"><%= profile.current_position %></p>
		<p class="blurb"><%= profile.blurb %></p>
	</div>
<% end %>