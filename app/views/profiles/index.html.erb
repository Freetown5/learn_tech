<h2>Stories from people just like you! Placeholder text!</h2>

<% @profiles.each do |profile| %>
	<div class="profile">
		<div class="img"><%= link_to image_tag(profile.img_url, alt: "Profile Image"), profile_path(profile) %></div>
		<p class="name"><%= link_to profile.name, profile_path(profile) %></p>
		<p class="former_position"><%= profile.former_position %></p>
		<p class="current_position"><%= profile.current_position %></p>
		<p class="blurb"><%= profile.blurb %></p>
	</div>
<% end %>