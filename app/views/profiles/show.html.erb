<div class="profile">
		<%= link_to image_tag(profile.img_url, alt: "Profile Image"), profile_path(profile), class: "img" %>
		<%= link_to profile.name, profile_path(profile), class: "name" %>
		<%= profile.former_position, class: "former_position" %>
		<%= profile.current_position, class: "current_position" %>
		<%= profile.blurb, class: "blurb" %>
		<%= profile.body, class: "body" %>
	</div>