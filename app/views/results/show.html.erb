<div class = "subheader">
  <h2>You should consider exploring:</h2>
  <h1><%= @result.category %></h1>
  <%= @result.description %>
</div>

<div class="container">
  <h2>Statistics</h2>
  <p>Possible career paths: <%= @result.career_titles%><p>

  <hr>
  <% if current_user || @result.id == 1 %>
  <h2>Articles</h2>
  <%= @result.article_title %>
  </br>
  <img src ="<%= @result.article_img_url %>"/>
  </br>
  <%= @result.article_blurb %>
  <p>From: <%= @result.article_source %></p>
  <%= @result.article_url %>

  <hr>
  <h2>Meetups</h2>

  <hr>


  <%= render "form" %>

  <% @comments.each do |comment| %>

    <p><span>Username: Joe</span>
    <%= comment.body %>
    <%= link_to 'Edit', edit_result_comment_path( @result, comment) %>
    <%= link_to 'Delete', result_comment_path( @result, comment), method: :delete %></p>

  <% end %>

  <% else %>
  <p>Create an account to see results tailored specifically to you, and more resources in your local area!</p>


  <% end %>

</div>
